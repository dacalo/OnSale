@model OnSale.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Crear";
}

<h2>Crear</h2>

<h4>Categoría</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Category" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Crear</button>
                <a asp-action="Index" class="btn btn-success"><i class="glyphicon glyphicon-backward"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

