@model OnSale.Common.Entities.Country

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <partial name="_Country"/>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-success"><i class="glyphicon glyphicon-backward"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
