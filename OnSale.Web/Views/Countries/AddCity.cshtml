@model OnSale.Common.Entities.City

@{
    ViewData["Title"] = "Agregar Ciudad";
}

<h2>Agregar</h2>

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDepartment" />

            <partial name="_City" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Guardar</button>
                <a asp-action="DetailsDepartment" asp-route-id="@Model.IdDepartment" class="btn btn-success"><i class="glyphicon glyphicon-backward"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
