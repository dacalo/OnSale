@model OnSale.Common.Entities.Country

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>País</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name="_Country"/>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Crear</button>
                <a asp-action="Index" class="btn btn-success"><i class="glyphicon glyphicon-backward"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
